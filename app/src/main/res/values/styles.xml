<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--PROGRESS BAR THEME-->
    <style name="ProgressTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="AlarmButton">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="TextViewBold20">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dimen_default</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/gray_dark</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/gray_dark</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>